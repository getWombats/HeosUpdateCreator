<Page
    x:Class="HeosUpdateCreator.DateienKopieren"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DateienKopieren"
    Width="700"
    Height="700"
    Background="Transparent"
    KeepAlive="True">


    <DockPanel LastChildFill="True">

        <!--  Grid bottom  -->
        <Grid
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            Background="Transparent"
            DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <Rectangle
                Width="25"
                Height="300"
                Margin="0,-150,0,0"
                HorizontalAlignment="Left"
                Fill="Red"
                Visibility="Hidden" />

            <StackPanel
                Margin="0,0,0,15"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Border
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="0,0,38,0"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource buttonOuterBorderStyle}">
                    <Border Style="{StaticResource buttonInnerBorderStyle}">
                        <Button
                            x:Name="buttonKopieren"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="buttonKopieren_Click"
                            ClickMode="Press"
                            Style="{StaticResource buttonStyleRounded}">
                            <Button.Content>Kopieren</Button.Content>
                        </Button>
                    </Border>
                </Border>

                <Border
                    x:Name="borderButtonAbbrechen"
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="0,0,235,0"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource buttonOuterBorderStyle}"
                    Visibility="Hidden">
                    <Border Style="{StaticResource buttonInnerBorderStyle}">
                        <Button
                            x:Name="buttonAbbrechen"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="buttonAbbrechen_Click"
                            ClickMode="Press"
                            Style="{StaticResource buttonStyleRounded}">
                            <Button.Content>Abbrechen</Button.Content>
                        </Button>
                    </Border>
                </Border>

                <Border
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="0"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource buttonOuterBorderStyle}">
                    <Border Style="{StaticResource buttonInnerBorderStyle}">

                        <Button
                            x:Name="buttonWeiter"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="buttonWeiter_Click"
                            ClickMode="Press"
                            Style="{StaticResource buttonStyleRounded}">
                            <Button.Content>Weiter</Button.Content>
                        </Button>
                    </Border>
                </Border>
            </StackPanel>
        </Grid>

        <!--  Grid top  -->
        <Grid Margin="0,0,0,0" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="30" />
                <RowDefinition Height="200" />
                <RowDefinition Height="40" />
                <RowDefinition Height="30" />
                <RowDefinition Height="200" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Rectangle
                Grid.RowSpan="7"
                Grid.Column="0"
                Width="2"
                HorizontalAlignment="Left"
                Fill="#FFF3F3F3" />
            <Rectangle
                Grid.Row="6"
                Grid.ColumnSpan="2"
                Height="2"
                VerticalAlignment="Bottom"
                Fill="#FFF3F3F3" />
            <Rectangle
                Grid.RowSpan="7"
                Grid.Column="1"
                Width="2"
                HorizontalAlignment="Right"
                Fill="#FFF3F3F3" />

            <!--  Grid Row 0  -->
            <Label
                Grid.Row="0"
                Margin="25,10,0,10"
                HorizontalAlignment="Left"
                Content="Bereitstellen der kompilierten Dateien"
                Style="{StaticResource headerTextStyle}" />

            <!--  Grid Row 1  -->
            <Label
                Grid.Row="1"
                Margin="25,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Quellverzeichnis:"
                Style="{StaticResource labelNormalTextStyle}" />

            <Label
                x:Name="labelOriginPath"
                Grid.Row="1"
                Margin="120,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Style="{StaticResource labelNormalTextStyle}" />

            <!--  Grid Row 2  -->
            <DataGrid
                x:Name="dataGridSource"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="25,0,200,0"
                AutoGenerateColumns="False"
                Background="White"
                BorderBrush="#FFBDBDBD"
                ItemsSource="{Binding}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="170"
                        Header="Name"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding}"
                        Header="Änderungsdatum"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>

            <!--  Grid Row 3  -->

            <!--  Grid Row 4  -->
            <Label
                Grid.Row="4"
                Margin="25,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Zielverzeichnis:"
                Style="{StaticResource labelNormalTextStyle}" />

            <Label
                x:Name="labelDestinationPath"
                Grid.Row="4"
                Margin="112,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Style="{StaticResource labelNormalTextStyle}" />

            <!--  Grid Row 5  -->
            <DataGrid
                x:Name="dataGridTarget"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Margin="25,0,200,0"
                AutoGenerateColumns="False"
                Background="White"
                BorderBrush="#FFBDBDBD">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="170"
                        Binding="{Binding}"
                        Header="Name"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Binding="{Binding}"
                        Header="Änderungsdatum"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>


            <!--  Grid Row 6  -->
            <Label
                x:Name="labelCopyInProgress"
                Grid.Row="6"
                Margin="25,35,100,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Left"
                Content="Daten werden kopiert..."
                Style="{StaticResource labelNormalTextStyle}"
                Visibility="Hidden" />

            <Label
                x:Name="labelCopyProgressPercent"
                Grid.Row="6"
                Margin="146,35,170,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Content="0%"
                Style="{StaticResource labelNormalTextStyle}"
                Visibility="Hidden" />

            <Label
                x:Name="labelCopyFileInfo"
                Grid.Row="6"
                Margin="25,75,100,0"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Left"
                Content=""
                Style="{StaticResource labelNormalTextStyle}"
                Visibility="Hidden" />

            <ProgressBar
                x:Name="copyProgressBar"
                Grid.Row="6"
                Width="300"
                Height="15"
                Margin="0,55,0,0"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="#FFEEEEEE"
                BorderThickness="1"
                Cursor="Arrow"
                Foreground="#FF0097fb"
                Visibility="Hidden" />
        </Grid>
    </DockPanel>
</Page>